{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section 
        class="avatar" 
        style="background: url(https://source.unsplash.com/collection/517198/800x800) no-repeat center center / cover"></section>
    <section class="details">
        
        <h3>Detalhes</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://"
                >
            </div>
        </div>

        <div class="item">
            <div>Name</div>
            <div>
                <input 
                    type="text"
                    name="name"
                    placeholder="Teacher's name"
                >
            </div>
        </div>

        <div class="item">
            <div>Date of Birth</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Education level</div>
            <div>
                <select name="level">
                    <option value="medio" select>Ensino MÃ©dio Completo</option>
                    <option value="superior">Ensino Superior Completo</option>
                    <option value="mestrado">Mestrado</option>
                    <option value="doutorado">Doutorado</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Type of class</div>
            <div>
                <span><input type="radio" name="type" value="face-to-face" checked> Face-to-face</span>
                <span><input type="radio" name="type" value="lesson">Classroom lesson</span>
            </div>
        </div>

        <div class="item">
            <div>Subjects</div>
            <div>
                <input 
                    type="text" 
                    name="subjects"
                    placeholder="Separate subjects with a comma"
                >
            </div>
        </div>

        <button type="submit">Save</button>
    </section>
</form>
{% endblock content%}